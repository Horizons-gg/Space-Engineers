<body>

    <%- include('./components/loader') %>
    <%- include('./components/header') %>

    <div class="extra-page">
        <!-- /// HERO SECTION /// -->
        <section id="hero-section" class="extra-page">
            <div class="row hero-unit">
                <div class="container">
                    <div class="row text-center">
                        <div class="col-md-12">
                            <div class="hero-caption"><!-- Main Tagline -->
                                <h1>BLOCK LIMITS</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- Hero Section End -->

        <!-- Breadcrumbs -->
        <nav aria-label="breadcrumb" class="small-margin breadcrumb-nav">
            <div class="container">
                <div class="row">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Space Engineers</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Ship Classes</li>
                    </ol>
                </div>
            </div>
        </nav>

        <section class="extra-page small-margin">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">

                        <table>

                            <tr>
                                <th>Limit Name</th>
                                <th>A Class</th>
                                <th>B Class</th>
                                <th>C Class</th>
                                <th>D Class</th>
                            </tr>

                            <% ClassLimits.forEach(Limit => { %>
                                
                                <th><%= Limit.name %></th>

                                <% if (Limit.A) { %> <th>A Class | <%= Limit.A.join(' / ') %></th><% } %>
                                <% if (Limit.B) { %> <th>B Class | <%= Limit.B.join(' / ') %></th><% } %>
                                <% if (Limit.C) { %> <th>C Class | <%= Limit.C.join(' / ') %></th><% } %>
                                <% if (Limit.D) { %> <th>D Class | <%= Limit.D.join(' / ') %></th><% } %>
                            
                            <% }) %>

                        </table>
                        
                        <div class="text-container tiny-margin">
                            <h2>Ship Class Limits</h2><br/>

                            <ul>
                                <% ClassLimits.forEach(Limit => { %>
                                
                                    <li><%= Limit.name %></li>

                                    <ul>
                                        <% if (Limit.A) { %> <li>A Class | <%= Limit.A.join(' / ') %></li><% } %>
                                        <% if (Limit.B) { %> <li>B Class | <%= Limit.B.join(' / ') %></li><% } %>
                                        <% if (Limit.C) { %> <li>C Class | <%= Limit.C.join(' / ') %></li><% } %>
                                        <% if (Limit.D) { %> <li>D Class | <%= Limit.D.join(' / ') %></li><% } %>
                                    </ul>
                                
                                <% }) %>
                            </ul>

                        </div>
                        
                    </div>

                    <div class="col-lg-6">
                        
                        <div class="text-container tiny-margin">
                            <h2>Player & Faction Limits</h2><br/>

                            <ul>
                                <% GeneralLimits.forEach(Limit => { %>
                                
                                    <li><%= Limit.name %> | <%= Limit.player %>x per Player - <%= Limit.faction %>x per Faction</li>
                                
                                <% }) %>
                            </ul>

                        </div>
                        
                    </div>
                </div>
            </div>
        </section>

        <!-- Breadcrumbs -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <div class="row">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Space Engineers</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Ship Classes</li>
                    </ol>
                </div>
            </div>
        </nav>

        <!-- /// FOOTER /// -->
        <div id="footer-extra">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h3>About Horizons</h3>
                        <p>TBD</p>
                    </div>
                    <div class="col-md-4">
                        <h3>Important Links</h3>
                        <ul class="extra-links">
                            
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h3>Social Links</h3>
                        <ul class="social-links"> <!-- Social Media Icons -->
                            <li><a href="#"><i class="fab fa-discord icon-social"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-12">
                        <p id="copyright">&copy; HORIZONS <span id="year"></span></p><!-- Copyright Text -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    
